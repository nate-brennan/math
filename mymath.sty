%%%%% PAGE FORMAT

\geometry{margin=1.8cm}            % Sets margins on all sides.
\pagestyle{fancyplain}             % Sets page style.
\headheight 35pt                   % Sets the height of the header.
\headsep 10pt                      % Sets space between the header and the body.
\setlength{\parindent}{0em}        % Sets paragraph indentation.
\setlength{\parskip}{0.5em}        % Sets space between paragraphs.
\setlist[itemize]{leftmargin=*}    % Normalize left margin in itemize. 
\setlist[enumerate]{leftmargin=*}  % Normalize left margin in enumerate.
\titlespacing{\paragraph}{0mm}{2mm}{4mm}
\linespread{1.3}



%%%%% ENVIRONMENTS AND COMMANDS

\newcommand{\EndSymbol}[1]{\hspace*{5mm}\hfill $#1$}

\newcommand{\NewMathEnviron}[4]{
    \NewEnviron{#1}[1][\unskip]{\paragraph{#1 ##1}\hspace{0.01mm} \BODY #4}
    \tcolorboxenvironment{#1}{
        blanker,
        before skip=6pt,
        after skip=6pt,
        borderline west={1mm}{0pt}{#2},
        left=3mm,
        #3
    }
}

\NewEnviron{Problem}[1]{\subsection*{Problem #1} \BODY}
\NewMathEnviron{Hypothesis}{Maroon}{}{}
\NewMathEnviron{Claim}{OliveGreen}{}{}
\NewMathEnviron{Proof}{Blue}{breakable}{\EndSymbol{\qedsymbol}}
\NewMathEnviron{Definition}{BurntOrange}{}{}
\NewMathEnviron{Todo}{red}{}{}
\NewMathEnviron{Note}{ProcessBlue}{}{}
\NewEnviron{Case}[2]{
    \begin{tcolorbox}[
        blanker,
        before skip=6pt,
        after skip=6pt,
        borderline west={1mm}{0pt}{violet},
        left=3mm
    ]
    \vspace{1mm}
    \paragraph{Case #1}\hspace{0.01mm} #2
    \end{tcolorbox}
    \BODY
    \EndSymbol{\ast}
    \vspace{2mm}
    % Keep this empty line:
    
}

